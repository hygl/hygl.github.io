---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";
import { getTitle, getDateString, getDate } from "../../../public/helper";
import Hamburger from "../../components/Hamburger.astro";

const posts = (await getCollection("blog")).sort(
	(a, b) => getDateString(b.id) - getDateString(a.id),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.container {
				display: grid;
 				grid-template-columns: 1fr 1fr 1fr;
				gap: 10px;
			}
			.item {
				background: #7375e0;
				text-align: center;
				border-radius: 10px;
			}
			
			.bigitem {
				grid-column: span 2;
				align-content: center;
				text-align: center;
				border-radius: 10px;
			}

			.largeitem {
				grid-row: span 2;
				background:  #ff9776;
				text-align: center;
				border-radius: 10px;
			}

			@media (max-width: 720px) {
			.container {
				display: grid;
 				grid-template-columns: 1fr;
				gap: 10px;
			}
}

		</style>
	</head>
	<body>
		<Header />
		<main>
			<Hamburger />
			<div class="container">
				{
					posts.map((post) => (
						<div class={`${(post.data.title? post.data.title.length
										: getTitle(post.id).length)>25 ?'largeitem':'item'}`}>
							<a href={`/blog/${post.slug}/`}>
								<p class="title">
									{post.data.title
										? post.data.title
										: getTitle(post.id)}
								<p>
							</a>
							<FormattedDate date={getDate(post.id)} />
						</div>
					))
				}
			</div>
		</main>
		<Footer />
	</body>
</html>
